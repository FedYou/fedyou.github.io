---
import Coffee from '../whirl/Coffee.astro'
---

<main>
  <Coffee />
</main>

<script>
  const TIME_LOADING = 1000
  const TIME_FADE_OUT = 500

  const ELEMENT_LOADING = document.querySelector('main') as HTMLElement

  setTimeout(() => {
    ELEMENT_LOADING.classList.add('fade-out')
    setTimeout(() => {
      ELEMENT_LOADING.remove()
    }, TIME_FADE_OUT)
  }, TIME_LOADING)
</script>

<style>
  main {
    display: grid;
    place-items: center;
    height: 100vh;
    width: 100vw;
    background: var(--bg);
    overflow: hidden;
    position: fixed;
    z-index: 100;
    opacity: 1;
    transition: opacity 0.5s ease-in-out;
  }
  main.fade-out {
    opacity: 0;
  }
</style>
