---
import getImage from '../../lib/getImage'
---

<div class="profile-main">
  <div class="picture-main">
    <img src={(await getImage('profile.webp')).src} class="picture-content" />
  </div>
  <p class="profile-name hover-underline-left" key-lang="profile.name"></p>
  <p class="profile-description" key-lang="profile.description"></p>
</div>

<style>
  * {
    --picture-size: 99px;
    --color-name: var(--bright-aqua);
    --color-description: var(--fg4);
  }

  .profile-main {
    display: grid;
    align-items: center;
    width: 100%;
    max-width: 900px;
    padding: 0 10px;
    justify-items: center;
    gap: 5px;
    justify-items: left;
    grid-template-columns: calc(var(--picture-size) + 5px) 1fr;
    grid-template-rows: repeat(calc(var(--picture-size) / 4));
  }
  .picture-main {
    grid-column: 1;
    grid-row: span 4;
    padding: 6px;
    background: var(--bg0_s);
  }
  .picture-main,
  .picture-content {
    width: var(--picture-size);
    height: var(--picture-size);
    border: 2px solid var(--bg0_h);
  }
  .picture-content {
    width: var(--picture-size);
    height: var(--picture-size);
    user-select: none;
    cursor: pointer;
    transition: margin 0.2s ease-in-out;
  }
  .picture-main:hover > .picture-content {
    margin: -4px;
  }

  .profile-name {
    cursor: pointer;
    --color: var(--color-name);
    color: var(--color-name);
    font-family: MojanglesTen;
    font-size: 24px;
    grid-row: 2;
    grid-column: 2;
    margin-left: 10px;
    width: calc(100% - 10px);
    text-align: center;
    user-select: none;
  }
  .profile-description {
    width: 100%;
    height: 100%;
    padding: 10px;
    color: var(--color-description);
    grid-row: 3;
    grid-column: 2;
    font-size: 16px;
    user-select: none;
  }
</style>
