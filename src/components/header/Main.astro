---
const { sizeButton } = Astro.props
---

<header id="header">
  <slot />
</header>

<style define:vars={{ sizeButton }}>
  header {
    position: relative;
    display: grid;
    place-content: center;
    height: 45px;
    gap: 10px;
    grid-template-rows: 1;
    grid-template-columns: repeat(auto-fit, var(--sizeButton));
    padding: 5px 10px;
    z-index: 1;
  }
</style>
