---
import theme from '../theme/theme.json'

import Loading from '../components/common/Loading.astro'
import Background from '../components/common/Background.astro'

const { title } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
  </head>
  <body>
    <Loading />
    <Background />
    <slot />
  </body>
</html>

<style define:vars={theme}></style>

<style is:global>
  * {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
    font-family: Virgil;
    scrollbar-color: var(--fg4) transparent;
  }
  ::selection {
    background: var(--selection);
  }
  br {
    user-select: none;
  }

  body {
    background: var(--bg);
    min-height: 100vh;
  }

  @font-face {
    font-family: Virgil;
    src: url(../assets/font/Virgil.woff2) format('woff2');
    font-display: swap;
  }
  @font-face {
    font-family: Mojangles;
    src: url(../assets/font/Mojangles.woff2) format('woff2');
    font-display: swap;
  }
  @font-face {
    font-family: MojanglesTen;
    src: url(../assets/font/MojanglesTen.woff2) format('woff2');
    font-display: swap;
  }

  img.cover {
    object-fit: cover;
  }
  .ellipsis {
    overflow: hidden;
    white-space: nowrap;
    width: 100%;
    text-overflow: ellipsis;
    text-align: center;
  }

  /* hovers */
  .hover-underline-left,
  .hover-underline-right {
    display: inline-block;
    position: relative;
  }
  .hover-underline-left::after,
  .hover-underline-right::after {
    content: '';
    position: absolute;
    width: 100%;
    transform: scaleX(0);
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: var(--color);

    transition: transform 0.25s ease-out;
  }
  .hover-underline-left:hover::after,
  .hover-underline-right:hover::after {
    transform: scaleX(1);
  }

  .hover-underline-left::after {
    transform-origin: bottom right;
  }
  .hover-underline-left:hover::after {
    transform-origin: bottom left;
  }

  .hover-underline-right::after {
    transform-origin: bottom left;
  }
  .hover-underline-right:hover::after {
    transform-origin: bottom right;
  }
</style>
<script src="../i18n/translator.ts"></script>
